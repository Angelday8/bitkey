#!/bin/bash -e

SRC=/usr/local/src

# unpack electrum-LTC
tar -zxf $SRC/Electrum-LTC-*.tar.gz -C $SRC
rm $SRC/Electrum-LTC-*.tar.gz

# install electrum-LTC
#cd $SRC/Electrum-LTC-*
#python3 setup.py install
#cd -
#rm -rf $SRC/Electrum-LTC-*

# unpack Electron Cash
tar -zxf $SRC/electron-*.tar.gz -C $SRC
rm $SRC/electron-*.tar.gz

# install Electron Cash
cd $SRC/electrum-*
python3 setup.py install
cd -
rm -rf $SRC/electrum-*

# unpack electrum
tar -zxf $SRC/Electrum-*.tar.gz -C $SRC
rm $SRC/Electrum-*.tar.gz

# install electrum
cd $SRC/Electrum-*
python3 setup.py install
cd -
rm -rf $SRC/Electrum-*

#fix protobuf permission
chmod -R a+r /usr/local/lib/python3.4/dist-packages/protobuf*

