# cd -
# rm -rf Electrum-LTC-*/

# unpack Electron Cash
tar -zxf electron-*.tar.gz
rm electron-*.tar.gz
mv electrum-*/ electron-cash/

# install Electron Cash
# cd electrum-*
# python3 setup.py install
# cd -
# rm -rf electrum-*/

# unpack electrum
tar -zxf Electrum-*.tar.gz
rm Electrum-*.tar.gz

# install electrum
cd Electrum-*
python3 setup.py install
cd -
# rm -rf Electrum-*/

#fix protobuf permission
chmod -R a+r /usr/local/lib/python3.4/dist-packages/protobuf*